{
  "name": "frontend",
  "private": true,
  "displayName": "frontend UI",
  "description": "Frontend UI for the Hello World extension",
  "version": "0.1.0-next",
  "type": "module",
  "scripts": {
    "preview": "vite preview",
    "build": "vite build",
    "test": "vitest --config ./vitest.config.ts --run",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.{ts,svelte}\"",
    "watch": "vite --mode development build -w",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "marked": "^17.0.2",
    "dompurify": "^3.3.1"
  },
  "devDependencies": {
    "@podman-desktop/extension-hummingbird-core-api": "workspace:^",
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@fortawesome/free-brands-svg-icons": "^7.2.0",
    "@fortawesome/free-regular-svg-icons": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "^7.2.0",
    "@podman-desktop/ui-svelte": "^1.25.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/vite-plugin-svelte": "6.2.4",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.7",
    "@types/humanize-duration": "^3.27.4",
    "autoprefixer": "^10.4.24",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "5.50.1",
    "svelte-check": "^4.3.5",
    "svelte-fa": "^4.0.4",
    "svelte-markdown": "^0.4.1",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "@codecov/vite-plugin": "^1.9.1",
    "svelte-select": "^5.8.3"
  }
}
